<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseDatos_act">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BaseDatos_act">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="302dp"
            android:layout_height="92dp"
            android:layout_marginTop="52dp"
            android:text="Gestión Libros"
            android:textSize="30sp"
            android:textStyle="normal|bold|italic"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="347dp"
            android:layout_height="198dp"
            android:layout_marginTop="36dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <EditText
                android:id="@+id/codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ingrese Codigo"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ingrese Nombre"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ingrese Precio de  Libro"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/precios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ingrese Precios de  Libro"
                android:inputType="textPersonName"
                android:onClick="añadirOrd"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="253dp"
            android:layout_height="147dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="143dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <Button
                android:id="@+id/but4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="añadirOrd"
                android:text="Añadir Libro" />

            <Button
                android:id="@+id/but2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="añadirOrd"
                android:text="Modificar Libro" />

            <Button
                android:id="@+id/but3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="añadirOrd"
                android:text="Eliminar Libro" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="302dp"
        android:layout_height="92dp"
        android:layout_marginTop="52dp"
        android:text="Gestión Libros"
